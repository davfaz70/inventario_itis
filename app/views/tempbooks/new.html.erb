<button class="btn btn-info" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Vedi le altre prenotazioni
  </button>
</p>
<div class="collapse" id="collapseExample">

  <ul class="list-group">
    <% if @booking.present? %>
    <% @booking.each do |booking| %>
      <li class="list-group-item">
        dal: <%= " " + booking.start_date.strftime("%d/%m/%y") + " " %>  al: <%= " " + booking.end_date.strftime("%d/%m/%y") + " "%> Quantità: <%= " " + booking.quantity.to_s%>
      </li>
    <% end %>
    <% else %>
    Oggetto non Prenotato
    <% end %>
  </ul>
</div>

<%= form_for ([@tool, @tempbook]) do |t|  %>

<% if @tempbook.errors.any? %>
    <div id="error_explanation">
      <% @tempbook.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
       <%= message %>
       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
       </button>
      </div>
      <% end %>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-4 col-sm-4">
    <div class="form-group" >
      <%=t.label :Data_inizio %>
      <%=t.date_field :start_date, class:"form-control"%>
    </div>
  </div>
  <div class="col-md-4 col-sm-4">
    <div class="form-group">
      <%=t.label :Data_fine %>
      <%=t.date_field :end_date, class:"form-control"%>
    </div>
  </div>
  <div class="col-md-4 col-sm-4">
    <div class="form-group">
      <%= t.label :Quantità %>
      <%= t.text_field :quantity, class:"form-control" %>
    </div>
  </div>
</div>

<%= hidden_field(:tempbook, :prof_id, :value => current_prof.id) %>


<br>

<%= t.submit class:"btn btn-success btn-block"%>

<% end %>
