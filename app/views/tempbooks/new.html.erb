<%= form_for ([@tool, @tempbook]) do |t|  %>

<% if @tempbook.errors.any? %>
    <div id="error_explanation">
      <% @tempbook.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
       <%= message %>
       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
       </button>
      </div>
      <% end %>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6 col-sm-6">
    <div class="form-group" >
      <%=t.label :Data_inizio %>
      <%=t.date_field :sd, class:"form-control"%>
    </div>
  </div>
  <div class="col-md-6 col-sm-6">
    <div class="form-group">
      <%=t.label :Data_fine %>
      <%=t.date_field :fd, class:"form-control"%>
    </div>
</div>
</div>
<div class="row">
  <div class="col-md-4 col-sm-6">
    <div class="form-group">
      <%=t.label :Nome %>
      <%=t.text_field :prof, class:"form-control"%>
    </div>
  </div>
  <div class="col-md-4 col-sm-4">
    <%= t.label :Cognome %>
    <%= t.text_field :prof_surname, class:"form-control" %>
  </div>
  <div class="col-md-4 col-sm-4">
    <%= t.label :Email %>
    <%= t.text_field :prof_email, class:"form-control" %>
  </div>
</div>

<br>

<%= t.submit class:"btn btn-primary btn-block"%>

<% end %>
