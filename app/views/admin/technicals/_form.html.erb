<%= form_for ([:admin, @technical]) do |t|  %>

<% if @technical.errors.any? %>
    <div id="error_explanation">
      <% @technical.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
       <%= message %>
       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
       </button>
      </div>
      <% end %>
    </div>
  <% end %>


<div class="form-group" >
  <%=t.label :name%>
  <%=t.text_field :name, class:"form-control"%>
</div>

<div class="form-group" >
  <%=t.label :surname%>
  <%=t.text_field :surname, class:"form-control"%>
</div>

<div class="form-group" >
  <%=t.label :email%>
  <%=t.text_field :email, class:"form-control"%>
</div>

<%= t.submit %>

<% end %>
