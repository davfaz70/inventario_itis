
<% @labs.each do |lab| %>
<% if lab.subject.present? %>
<div class="card">
  <div class="card-header">
    <%= lab.name %>
  </div>
  <div class="card-body">
    <h5 class="card-title"> <%= lab.subject %></h5>
    <p class="card-text"> <%= t('.labtools') %> <span class="badge badge-primary badge-pill"> <%= lab.tools.size %> </span> </p>
    <div class="row">
      <div class="col-md-3 col-sm-3">
        <%= link_to fa_icon('eye') + " " + t('.show'), admin_lab_path(lab), class:"btn btn-primary btn-block" %>
      </div>
      <div class="col-md-2 col-sm-2">
        <%= link_to fa_icon('pencil') + " " + t('.edit'), edit_admin_lab_path(lab), class:"btn btn-warning btn-block" %>
      </div>
      <div class="col-md-4 col-sm-4">
        <%= link_to t('.language'), admin_choose_lab_route_path(lab), class:"btn btn-secondary btn-block" %>
      </div>
      <div class="col-md-2 col-sm-2">
        <%= link_to t('.assign'), admin_assign_lab_route_path(lab), class:"btn btn-dark btn-block" %>
      </div>
      <div class="col-md-1 col-sm-1">
        <%= link_to fa_icon('trash'), admin_lab_path(lab), method: :delete, data: {confirm: t('.confirm')}, class:"btn btn-danger btn-block" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>

<hr>
<div class="paginate-container">
<%= paginate @labs %>
</div>
<hr>
<%= link_to t('.new'), new_admin_lab_path, class:"btn btn-primary btn-block" %>
