<style>
        .scroll-box {
            overflow-y: scroll;
            height: 200px;
            padding: 1rem
        }
</style>

<!-- Portfolio Item Heading -->
<h1 class="my-4"> <%= @tool.name %> <small> <%= t('.quantity') + ": " + @tool.quantity.to_s %></small> </h1>

      <!-- Portfolio Item Row -->
<div class="row">
  <div class="col-lg-8 col-md-7">
    <% if @tool.photo.present? %>
      <%= image_tag(@tool.photo, :alt => "toolphoto.jpeg", class:"img-fluid") %>
    <% else %>
      <% image_tag("standard_toolphoto.jpeg", :alt => "toolphoto.jpeg", class:"img-fluid") %>
    <% end %>
    <br>
    <br>
    <% if prof_signed_in? && @tool.quantity > 0%>
      <div id="prenota">
        <div class="card">
          <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
              <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                <%=fa_icon('arrow-down') + " " + t('tools.index.book') + "!" %>
              </button>
            </h5>
          </div>
          <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#prenota">
            <div class="card-body">

              <%= form_for ([@tool, @tempbook]) do |t|  %>

                <% if @tempbook.errors.any? %>
                  <div id="error_explanation">
                    <% @tempbook.errors.full_messages.each do |message| %>
                      <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= message %>
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    <% end %>
                  </div>
                <% end %>

                <div class="row">
                  <div class="col-lg-6 ">
                    <div class="form-group" >
                      <%=t.label :Data_inizio %>
                      <%=t.datetime_local_field :start_date, value: Time.now.strftime("%d/%m/%Y, %H:%M"), class:"form-control"%>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <%=t.label :Data_fine %>
                      <%=t.datetime_local_field :end_date, value: Time.now.strftime("%d/%m/%Y, %H:%M"), class:"form-control"%>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6 ">
                    <div class="form-group">
                      <%= t.label :QuantitÃ  %>
                      <%= t.text_field :quantity, value: 1, class:"form-control" %>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <% for lab in @tool.labs %>
                      <%= t.label lab.name %>
                      <% if @tool.labs.first == lab %>
                        <%= radio_button_tag "tempbook[lab_id]" , lab.id, true%>
                      <% else %>
                        <%= radio_button_tag "tempbook[lab_id]" , lab.id%>
                      <%end%>
                      <br>
                    <% end %>
                  </div>
                </div>
                <div class="form-group">
                  <%=t.label :Motivazione %>
                  <%=t.text_area :goal, class:"form-control"%>
                </div>

                <%= hidden_field(:tempbook, :prof_id, :value => current_prof.id) %>
                <br>
                <%= t.submit class:"btn btn-success btn-block"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

        <div class="col-lg-4 col-md-5">
          <h3 class="my-3"> <%= t('.description') %> </h3>
          <p> <%= @tool.description %></p>



            <div class="panel panel-default">
                        <div class="card-header">
                          <ul class="nav nav-pills">
                              <li class="active"><a href="#bookings" data-toggle="tab" class="btn btn-primary"> <%= t('.bookings') %> </a>
                              </li>
                              <li><a href="#documentations" data-toggle="tab" class="btn btn-primary"> <%= t('.documentation') %> </a>
                              </li>
                          </ul>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- Nav tabs -->


                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active scroll-box show" id="bookings">
                                  <% if @tool.books.where('end_date >= ? AND confirmed = ?', Time.now, true).present? %>
                                    <% @tool.books.where('end_date >= ? AND confirmed = ?', Time.now, true).each do |booking| %>
                                       <%= booking.prof.name + " " + booking.prof.surname %> <br>
                                        <%= t('.from') + " " %> <b> <%= booking.start_date.strftime("%d/%m/%y %k:%M").to_s + " " %> </b> <br>
                                        <%= t('.to') + " " %> <b> <%= booking.end_date.strftime("%d/%m/%y %k:%M").to_s %> </b>
                                      <br>
                                      <i> <%= t('.quantity') + ": " + booking.quantity.to_s %> </i>
                                       <hr>
                                    <%end%>
                                  <% else %>
                                  <%= t('.notbooked') %>
                                  <% end %>
                                </div>
                                <div class="tab-pane fade scroll-box" id="documentations">
                                  <% if @tool.documentations.present? %>
                                    <% @tool.documentations.each do |doc| %>
                                      <li class="list-group-item">
                                        <%= link_to fa_icon('cloud-download'), doc.file.url %>
                                        <%= " " + doc.name %>
                                      </li>
                                    <% end %>
                                  <% else %>
                                    <%= t('.notdocumented') %>
                                  <% end %>
                                  </div>
                                </div>
                            </div>
                        </div>                        <!-- /.panel-body -->
                     </div>




            </div>




      <!-- /.row -->

      <!-- Related Projects Row -->
      <h3 class="my-4"> <%= t('.otherphotos') %> </h3>

      <div class="row">
      <% @tool.photos.each do |photo| %>
        <div class="col-md-3 col-sm-6 mb-4">

            <%= image_tag(photo.picture.standard, :alt => "booh", class:"img-fluid") %>

        </div>
        <% end %>


</div>

<div class="row">
  <div class="col-lg-9 col-md-7">



<div class="card my-4">
            <h5 class="card-header"> <%= t('.comment') %> </h5>
            <div class="card-body">
              <%= form_for ([@tool, @tool.posts.build]) do |t|  %>

                <div class="form-group">
                  <%= t.text_area :body, class:"form-control" %>
                </div>
                <%= t.submit t('.leavecomment'), class:"btn btn-primary" %>
              <% end %>
            </div>
          </div>

      <% @posts.each do |post| %>
      <% if post.prof.present? %>
          <div class="media mb-4">
            <%= image_tag("http://placehold.it/50x50", :alt => " ", class:"d-flex mr-3 rounded-circle") %>
            <div class="media-body">
              <h5 class="mt-0">
              <%= post.prof.name + " " + post.prof.surname %>
               <% if prof_signed_in? %>
               <% if current_prof == post.prof %>
               <%=link_to fa_icon('pencil'), edit_tool_post_path(@tool, post), class:"btn btn-light btn-sm"%> |
               <%=link_to fa_icon('trash'), tool_post_path(@tool, post), method: :delete, data: {confirm:t('.confirm')}, class:"btn btn-light btn-sm"%>
               <% end %>
               <% end %>
               </h5>
              <% if post.updated_at != post.created_at %>
                <small id="edited" class="form-text text-muted"><%= t('.editedat') + " " + post.updated_at.strftime("%d/%m/%y").to_s + " " + t('.at') + " " + post.updated_at.strftime("%H:%M")%></small>
              <% end %>
              <%= post.body %>
            </div>
          </div>
        <% end %>
      <% end %>

    </div>
    <div class="col-lg-3 col-md-5">
      <div class="LI-profile-badge"  data-version="v1" data-size="medium" data-locale="<%= I18n.locale %>" data-type="vertical" data-theme="dark" data-vanity="davide-fazio"><a class="LI-simple-link" href='https://it.linkedin.com/in/davide-fazio?trk=profile-badge'>Davide F.</a></div>
    </div>
  </div>
