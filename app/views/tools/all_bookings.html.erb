<h1>
  <%= @tool.name %>
</h1>
<hr>
<% if @bookings.present? %>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="alert alert-secondary" role="alert">
          <h4 class="alert-heading"><%= booking.prof.name + " " + booking.prof.surname %></h4>
          <p> <%= t('tools.show.from') + " " %> <b> <%= booking.start_date.strftime("%d/%m/%y %k:%M").to_s + " " %> </b> <br>
             <%= t('tools.show.to') + " " %> <b> <%= booking.end_date.strftime("%d/%m/%y %k:%M").to_s %> </b> </p>
          <p> <%= t('tools.show.lab') + booking.lab.name %> </p>
          <hr>
          <p class="mb-0"> <%= t('tools.show.quantity') + ": " + booking.quantity.to_s %> </p>
        </div>
      </div>
    <%end%>
  </div>
<% else %>
  <%= t('tools.show.notbooked') %>
<% end %>
