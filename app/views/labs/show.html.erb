<style>
        .scroll-box {
            overflow-y: scroll;
            height: 150px;
            padding: 1rem
        }
</style>
<div class="row">


  <div class=" col-lg-3 col-md-5">



    <div class="card my-4">
              <h5 class="card-header"><%= t('tools.index.search') %></h5>
              <div class="card-body">
                <%= search_form_for @q, url: lab_path(@lab) do |f| %>
                <div class="input-group">

                <%= f.search_field :translations_name_cont, class:"form-control", placeholder: t('tools.index.place') %>
                <%= f.submit t('tools.index.search'), class:"btn btn-secondary "%>
                </div>
                <% end %>

              </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
              <h5 class="card-header"><%= t('tools.index.categories') %></h5>
              <div class="scroll-box">
                <% @categories.each do |category| %>
                   <td>  <%=link_to fa_icon('tag') + " " + category.name, category_path(category), class:"btn btn-warning btn-sm"%>  </td>
               <%end%>
              </div>
            </div>
              <div class="card my-4">
              <h5 class="card-header"><%= t('tools.index.labs') %></h5>
              <div class="scroll-box">
                <% @labs.each do |lab| %>
                   <td>  <%=link_to fa_icon('flask') + " " + lab.name, lab_path(lab), class:"btn btn-primary btn-sm"%>  </td>
               <%end%>
              </div>
            </div>
            <br>

            <div class="LI-profile-badge" width="100%" data-version="v1" data-size="medium" data-locale="<%= I18n.locale %>" data-type="horizontal" data-theme="light" data-vanity="davide-fazio"><a class="LI-simple-link" href='https://it.linkedin.com/in/davide-fazio?trk=profile-badge'>Davide F.</a></div>

<br>


  </div>

  <div class="col-lg-9 col-md-7">



<div class="row">



  <% @tools.each do |tool| %>
    <% if tool.name.present? %>

      <div class="col-lg-4 col-sm-6 portfolio-item">
        <div class="card h-100">

          <% if tool.photo.standard.present? %>
            <%= link_to image_tag(tool.photo.standard, :alt => "toolphoto.jpeg", class:"card-img-top"), tool_path(tool)%>
          <% else %>
            <%= link_to image_tag("standard_toolphoto.jpeg", :alt => "toolphoto.jpeg", class:"card-img-top"), tool_path(tool)%>
          <% end %>

            <div class="card-body">
              <h4 class="card-title">
                <%= tool.name %>
              </h4>
              <p class="card-text text-truncate">
                <%= tool.description %>
              </p>

            </div>
            <ul class="list-group list-group-flush">

                <%= link_to fa_icon('eye') + " " + t('tools.index.show'), tool_path(tool), class:"list-group-item list-group-item-primary" %>

            </ul>
          </div>
        </div>

    <% end %>
  <% end %>
</div>

</div>

</div>

<ul class="pagination justify-content-center">
  <%= paginate @tools %>
</ul>
