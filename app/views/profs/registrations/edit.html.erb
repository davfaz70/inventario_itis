<h2 class="text-center"> <%= t('devise.registrations.edit.title') + " " + resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , class:"form-signin"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="text-center">
    <img id="image" height="200" width="200"/>
  </div>

  <div class="custom-file">
    <%= f.label t('devise.registrations.new.picture'), class:"custom-file-label" %>
    <%= f.file_field :picture, class:"custom-file-input" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('devise.registrations.edit.waiting') + " " + resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('devise.registrations.edit.blank') %>)</i><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t('devise.registrations.edit.characters') %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.edit.confirm') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.edit.current') %> <i>( <%= t('devise.registrations.edit.need') %> )</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.update'), class:"btn btn-success btn-block"%>
  </div>
<% end %>

<h3> <%= t('devise.registrations.edit.cancel') %> </h3>

<p> <%= t('devise.registrations.edit.unhappy') %>? <%= button_to t('devise.registrations.edit.cancel'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.confirmdelete') }, method: :delete, class:"btn btn-danger" %></p>

<script>
  document.getElementById("prof_picture").onchange = function () {
      var reader = new FileReader();
      reader.onload = function (e) {
        document.getElementById("image").src = e.target.result;
      };
      reader.readAsDataURL(this.files[0]);
  };
</script>
