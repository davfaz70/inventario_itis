<h2 class="text-center"> <%= t('devise.passwords.edit.title') %> </h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:"form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password,  t('devise.passwords.edit.new') %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('devise.registrations.edit.characters') %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('devise.passwords.edit.confirm') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit  t('devise.passwords.edit.submit'), class:"form-control" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
