<h2 class="text-center"> <%= t('devise.passwords.new.title') %> </h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"form-signin" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.passwords.new.submit'), class:"btn btn-secondary form-control" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
