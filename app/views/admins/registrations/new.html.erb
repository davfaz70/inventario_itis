<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:"form-signin"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.new.role') %><br />
    <select class="custom-select mr-sm-2" name="admin[role]">
          <option selected value=0> <%= t('devise.registrations.new.rolezero') %> </option>
          <option value=1> DSGA </option>
          <option value=2> ATA </option>
    </select>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('devise.registrations.edit.characters') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.edit.confirm') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.check_box :agree %>
    <%= t('devise.registrations.new.agree') %> <a href="https://www.iubenda.com/privacy-policy/50660312" class="iubenda-white iubenda-embed " title="Privacy Policy">Privacy Policy</a>
     <script type="text/javascript">
     (function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src="https://cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; if(w.addEventListener){w.addEventListener("load", loader, false);}else if(w.attachEvent){w.attachEvent("onload", loader);}else{w.onload = loader;}})(window, document);
    </script>

  </div>
  <br>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success btn-lg btn-block" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
